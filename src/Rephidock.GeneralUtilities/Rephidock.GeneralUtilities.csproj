<Project Sdk="Microsoft.NET.Sdk">

   <PropertyGroup>
    <Title>Rephidock.GeneralUtilities</Title>
    <Authors>Rephidock</Authors>
    <Version>1.2.0+framework35</Version>
    <IncludeSourceRevisionInInformationalVersion>false</IncludeSourceRevisionInInformationalVersion>
    <Description>A package with general utilities that may be useful</Description>
    <Copyright>Copyright (c) 2024 Rephidock</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>general;utils;helper;math;random</PackageTags>
    <PackageProjectUrl>https://github.com/Rephidock/Rephidock.GeneralUtilities</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Rephidock/Rephidock.GeneralUtilities</RepositoryUrl>
    <PackageReadmeFile>README.nuget.md</PackageReadmeFile>
    <PackageReleaseNotes>
      - Added GeneralEnumerableExtensions.SplitIntoSegments for "splitting" array into ArraySegments
      - Added ColorMath.AlphaBlend overload that works on (r,g,b,a) tuples of floats.
      - Added IList&lt;T&gt;.AsReadOnly extension for older versions
    </PackageReleaseNotes>
  </PropertyGroup>
  
  <ItemGroup>
    <None Include="..\..\README.nuget.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  
  <PropertyGroup>
    <TargetFrameworks>net35</TargetFrameworks>
    <LangVersion>6</LangVersion>
    <RootNamespace>Rephidock.GeneralUtilities</RootNamespace>
    <ImplicitUsings>disable</ImplicitUsings>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <DefineConstants>$(DefineConstants);SYSTEM_DRAWING_COLOR_ENABLED</DefineConstants>
  </PropertyGroup>
  
</Project>
